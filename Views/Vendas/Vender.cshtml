@{
    ViewData["Title"] = "Cadastrar Clientes";
}

<head>
    <link rel="stylesheet" href="~/css/style-login.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
</head>

<section class="ftco-section animate__animated animate__bounceInLeft">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="login-wrap p-4 p-md-5">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span><img class="img-login animate__animated animate__backInUp" src="~/img/buy.png" alt="" srcset=""></span>
                    </div>
                    <h3 class="text-center mb-4">Venda de produtos</h3>
                    <form action="#" class="login-form">
                        <div class="form-group">
                            <label>Selecione o modelo: </label>
                            <select class="form-control rounded-left" name="modelo">
                                <option value="bota">Escolha o Código de Referência</option>
                                <option value="bota">Bota</option>
                                <option value="bota">Bota</option>
                                <option value="bota">Bota</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Digite o nome do cliente:</label>
                            <input type="text" class="form-control rounded-left" placeholder="Cliente" required>
                        </div>
                        <div class="form-group">
                            <label>Quantidade:</label>
                            <input type="number" class="form-control rounded-left" placeholder="Qtd" required>
                        </div>
                        <div class="form-group align-items-center">
                            <button type="submit" class="btn btn-primary rounded submit p-3 px-5">Realizar Venda</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="js/jquery.min.js"></script>
<script src="js/popper.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/main.js"></script>

